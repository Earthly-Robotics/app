<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DanceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/homeimage" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="47dp"
                android:maxHeight="47dp"
                android:scaleType="fitStart"
                android:src="@drawable/arrowback"
                android:gravity="left"
                android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/buttonRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/flowergolem"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView android:id="@+id/batteryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:layout_gravity="center"
                    android:fontFamily="@font/centurygothic"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <ImageView android:id="@+id/batteryImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/battery10"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundstyle"
        android:orientation="vertical"
        android:layout_marginTop="135dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beat dancer"
                        android:layout_gravity="center"
                        android:fontFamily="@font/centurygothic"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView android:id="@+id/circleConnectionDance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="18dp"
                        android:height="18dp"
                        android:background="@drawable/circlered"
                        android:layout_marginLeft="6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="25dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#46C2C7"
                        android:minHeight="175dp">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_centerVertical="true">

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Line dance"
                            android:fontFamily="@font/centurygothic"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView android:id="@+id/circleLineDance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="18dp"
                            android:height="18dp"
                            android:background="@drawable/circlered"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                    <Button android:id="@+id/buttonLineDance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:layout_marginTop="10dp"
                        android:width="220dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonstyle"
                        android:fontFamily="@font/centurygothic"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solo dance"
                            android:fontFamily="@font/centurygothic"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView android:id="@+id/circleSoloDance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="18dp"
                            android:height="18dp"
                            android:background="@drawable/circlered"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                    <Button android:id="@+id/buttonSoloDance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:layout_marginTop="10dp"
                        android:width="220dp"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonstyle"
                        android:fontFamily="@font/centurygothic"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>